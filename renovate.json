{
  "extends": [
    "github>nuxt/renovate-config-nuxt",
    "packages:linters",
    ":maintainLockFilesWeekly",
    ":enableVulnerabilityAlerts",
    ":automergeLinters",
    ":automergePatch",
    ":automergeTypes"
  ],
  "minimumReleaseAge": "3 days",
  "prCreation": "not-pending",
  "packageRules": [
    {
      "groupName": "all lint dependencies",
      "groupSlug": "all-lint",
      "matchPackageNames": [
        "/lint/"
      ]
    }
  ]
}
